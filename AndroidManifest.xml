<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.splyze"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>


    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".SplyzeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LinkedInLoginActivity">
        	<intent-filter>
        		<action android:name="android.intent.action.DEFAULT" />
        		<category android:name="android.intent.category.BROWSABLE" />
        	</intent-filter>
        </activity>        
        <activity android:name=".TwitterLoginActivity">
        	<intent-filter>
        		<action android:name="android.intent.action.DEFAULT" />
        		<category android:name="android.intent.category.BROWSABLE" />
        	</intent-filter>
        </activity>        
        <activity android:name=".EventSelectorActivity">
        	<intent-filter>
        		<action android:name="android.intent.action.DEFAULT"/>
        	</intent-filter>
        </activity>
        <activity android:name=".LoggedInActivity">
        	<intent-filter>
        		<action android:name="android.intent.action.DEFAULT"/>
        	</intent-filter>
        </activity>
        <activity android:name=".HotspotsActivity">
        	<intent-filter>
        		<action android:name="android.intent.action.DEFAULT"/>
        	</intent-filter>
        </activity>
        <activity android:name=".ScheduleActivity">
        	<intent-filter>
        		<action android:name="android.intent.action.DEFAULT"/>
        	</intent-filter>
        </activity>
        <activity android:name=".MyProfileActivity">
        	<intent-filter>
        		<action android:name="android.intent.action.DEFAULT"/>
        	</intent-filter>
        </activity>
        <activity android:name=".EventMapActivity">
        	<intent-filter>
           		<action android:name="android.intent.action.DEFAULT"/>
        	</intent-filter>
        </activity>
        <activity android:name=".App"
                  android:label="@string/app_name" android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity android:name=".EventDetailActivity"
                  android:label="@string/app_name" android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        
        <uses-library android:name="com.google.android.maps"></uses-library>
        
    </application>

</manifest>