<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loggedin_bkg" 
	android:orientation="vertical" android:weightSum="1">
    <Button android:layout_width="match_parent" android:text=" " android:layout_height="wrap_content" android:background="@android:color/transparent" android:layout_weight="0.10"></Button>
    <LinearLayout android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
    			android:orientation="horizontal" android:weightSum="1" android:layout_weight="0.22">
        <Button android:layout_weight="0.51" android:layout_width="wrap_content" android:onClick="buttonClicked" android:id="@+id/hotspot_button" android:text=" " android:background="@android:color/transparent" android:layout_height="match_parent"></Button>
    	<Button android:text=" " android:id="@+id/users_button" android:layout_width="wrap_content" android:onClick="buttonClicked" android:layout_weight="0.49" android:background="@android:color/transparent" android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
    			android:orientation="horizontal" android:weightSum="1" android:layout_weight="0.24">
    	<Button android:text=" " android:id="@+id/schedule_button" android:layout_width="wrap_content" android:onClick="buttonClicked" android:layout_weight="0.51" android:background="@android:color/transparent" android:layout_height="match_parent"/>
    	<Button android:text=" " android:id="@+id/map_button" android:layout_width="wrap_content" android:onClick="buttonClicked" android:layout_weight="0.49" android:background="@android:color/transparent" android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
    			android:layout_height="wrap_content" 
    			android:orientation="horizontal" android:weightSum="1" android:layout_weight="0.24">
    	<Button android:text=" " android:id="@+id/my_schedule_button" android:layout_width="wrap_content" android:onClick="buttonClicked" android:layout_weight="0.51" android:background="@android:color/transparent" android:layout_height="match_parent"/>
    	<Button android:text=" " android:id="@+id/my_profile_button" android:layout_width="wrap_content" android:onClick="buttonClicked" android:layout_weight="0.49" android:background="@android:color/transparent" android:layout_height="match_parent"/>
    </LinearLayout>
    <Button android:layout_weight="0.20" android:layout_width="match_parent" android:text=" " android:id="@+id/live_stream_button" android:background="@android:color/transparent" android:layout_height="wrap_content"></Button>
</LinearLayout>